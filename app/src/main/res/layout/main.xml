<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <android.support.v4.view.ViewPager

            android:id="@+id/mViewPage"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"></android.support.v4.view.ViewPager>


        <com.zncm.image_pager_indicator.ImageViewIndicator
            android:layout_width="wrap_content"
            android:id="@+id/mInficator"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"></com.zncm.image_pager_indicator.ImageViewIndicator>
    </FrameLayout>

</LinearLayout>